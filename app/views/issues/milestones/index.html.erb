<div id="gts-pjax-container">
  <h2 class="gts-legend">
    Milestones
  </h2>
  <div class="gts-pjax pull-right">
    <%= link_to 'Add milestone', new_project_issue_milestone_path(project), :class => 'btn btn-primary' %>
  </div>
  <table class="table table-stripped gts-table gts-project-issue-milestones">
    <thead>
      <tr>
        <th>Name</th>
        <th>Issue count</th>
        <th>Due date</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody class="gts-table-actions">
      <%= render milestones %>
    </tbody>
  </table>
</div>
